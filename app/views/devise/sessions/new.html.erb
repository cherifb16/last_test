<div class="text-center">
    
      
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class:"sr-only" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control col-md-6 ml-auto mr-auto", placeholder:"Email address" %>
        </div>

        <div class="field">
          <%= f.label :password, class:"sr-only" %><br />
          <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", class:"form-control col-md-6 ml-auto mr-auto" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field checkbox mb-3 ">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class:"btn btn-lg btn-primary btn-block col-md-6 ml-auto mr-auto" %>
        </div>
      <% end %>

      <%= render "devise/shared/links"%>
  
</div>